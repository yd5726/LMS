<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/top_nav"/>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="@color/blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:text="회원 이름"
                            style="@style/TEXT_STYLE_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageButton
                            app:tint="@color/white"
                            android:src="@drawable/ic_baseline_qr_code_scanner_24"
                            android:background="@drawable/oval_btn"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <androidx.cardview.widget.CardView
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            app:cardCornerRadius="20dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/light_blue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_weight="2"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp">
                                    <ImageView
                                        android:src="@drawable/ic_baseline_account_circle_24"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp">
                                    <TextView
                                        style="@style/TEXT_STYLE_1"
                                        android:text="학적기본"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            app:cardCornerRadius="20dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/light_blue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_weight="2"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp">
                                    <ImageView
                                        android:src="@drawable/ic_baseline_account_circle_24"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp">
                                    <TextView
                                        style="@style/TEXT_STYLE_1"
                                        android:text="강의"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView_tt"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            app:cardCornerRadius="20dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/light_blue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_weight="2"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp">
                                    <ImageView
                                        android:src="@drawable/ic_baseline_account_circle_24"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp">
                                    <TextView
                                        style="@style/TEXT_STYLE_1"
                                        android:text="시간표"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <androidx.cardview.widget.CardView
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            app:cardCornerRadius="20dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/light_blue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_weight="2"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp">
                                    <ImageView
                                        android:src="@drawable/ic_baseline_account_circle_24"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp">

                                    <TextView
                                        style="@style/TEXT_STYLE_1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="출결관리" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            app:cardCornerRadius="20dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/light_blue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_weight="2"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp">
                                    <ImageView
                                        android:src="@drawable/ic_baseline_account_circle_24"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp">
                                    <TextView
                                        style="@style/TEXT_STYLE_1"
                                        android:text="상담"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            app:cardCornerRadius="20dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/light_blue"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_weight="2"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp">
                                    <ImageView
                                        android:src="@drawable/ic_baseline_account_circle_24"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp">
                                    <TextView
                                        style="@style/TEXT_STYLE_1"
                                        android:text="과제"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:backgroundTint="@color/light_blue"
                app:cardCornerRadius="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:layout_margin="10dp"
                            android:text="공지사항"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_margin="10dp"
                            android:text="View All"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:text="일반"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:text="긴급"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:text="과제"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:text="11.02 2022학년도 학생식당 및 편의 시설 만족도 조사"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="11.01 2022학년도 11월 집단심리검사 안내"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="11.01 공지사항1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="11.01 공지사항2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/drawer"/>
</androidx.drawerlayout.widget.DrawerLayout>